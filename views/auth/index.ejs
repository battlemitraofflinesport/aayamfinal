<!-- views/auth/index.ejs -->
<div class="auth-wrapper">
  <div class="auth-card" data-aos="zoom-in">
    <div class="auth-card-top" aria-hidden="true"></div>

    <div class="text-center mb-4">
      <img src="/images/aayam_img.jpg" alt="AAYAM" width="52" height="52" style="border-radius:14px;border:2px solid rgba(166,124,82,0.4);margin-bottom:12px;">
      <h2 style="font-family:var(--font-display);font-size:1.55rem;font-weight:800;color:var(--tx);margin-bottom:2px;">Welcome</h2>
      <p style="font-size:0.84rem;color:var(--tx-muted);">AAYAM Committee Portal</p>
    </div>

    <% if (typeof error !== "undefined") { %>
      <div style="background:rgba(192,57,43,0.09);border:1px solid rgba(192,57,43,0.22);border-radius:10px;padding:12px 16px;text-align:center;color:#c0392b;font-size:0.88rem;font-weight:600;margin-bottom:18px;">
        <%= error %>
      </div>
    <% } %>

    <!-- Auth Tabs -->
    <div class="auth-tabs">
      <button class="auth-tab active" id="loginTab">Login</button>
      <button class="auth-tab" id="signupTab">Sign Up</button>
    </div>

    <form method="POST" action="/auth/email">
      <input type="hidden" name="mode" id="mode" value="login">

      <div id="nameField" style="display:none;" class="form-group-custom">
        <label class="form-label-custom">Full Name</label>
        <input class="form-control-custom" name="name" placeholder="Your full name">
      </div>

      <div class="form-group-custom">
        <label class="form-label-custom">Email *</label>
        <input class="form-control-custom" name="email" type="email" placeholder="your@email.com" required>
      </div>

      <div class="form-group-custom" style="margin-bottom:20px;">
        <label class="form-label-custom">Password *</label>
        <input class="form-control-custom" name="password" type="password" placeholder="••••••••" required>
      </div>

      <button type="submit" class="form-submit-btn" style="margin-bottom:16px;">Continue</button>
    </form>

    <div class="auth-divider">OR</div>

    <a href="/auth/google" class="btn-google">
      <svg width="18" height="18" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
      Continue with Google
    </a>
  </div>
</div>

<script>
  const loginTab = document.getElementById('loginTab');
  const signupTab = document.getElementById('signupTab');
  const nameField = document.getElementById('nameField');
  const modeInput = document.getElementById('mode');
  loginTab.onclick = () => { loginTab.classList.add('active'); signupTab.classList.remove('active'); nameField.style.display = 'none'; modeInput.value = 'login'; };
  signupTab.onclick = () => { signupTab.classList.add('active'); loginTab.classList.remove('active'); nameField.style.display = 'block'; modeInput.value = 'register'; };
</script>
