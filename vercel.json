{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "views/**",
                    "public/**",
                    "routes/**",
                    "controllers/**",
                    "config/**",
                    "middlewares/**",
                    "*.js",
                    ".env"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/index.js"
        }
    ]
}
